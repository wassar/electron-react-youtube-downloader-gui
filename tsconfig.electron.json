{
    "compilerOptions": {
        "target": "ES2016",
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "baseUrl": ".",
        "outDir": "build",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        //"experimentalDecorators": true,
        //"emitDecoratorMetadata": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types", "./types"]
    },
    "include": ["app/**/*", "./types"],
    "exclude": ["node_modules"]
}
