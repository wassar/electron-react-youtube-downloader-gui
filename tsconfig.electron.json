{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["app"],
    "exclude": ["node_modules"]
}
